
<div class="card w-75 bg-light">
  <div class="card-body">
  </br></br></br>
    <h5 class="card-title fs-1"><%= @friend.last_name %> <%= @friend.first_name %></h5></br>
    <p class="card-text fs-4"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
    </br>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>
    <%= link_to 'Back', friends_path, class:"btn btn-dark"  %>
  </div>
</div>




